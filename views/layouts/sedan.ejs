
<!DOCTYPE html>
<html lang="en">
 <head>
  <meta charset="UTF-8" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <meta name="description" content="CSE Motors - DMC Delorean for sale" >
  <meta name="author" content="Barisitom Akpee" >
  <title><%- title %></title>
  <link rel="stylesheet" href="css/styles.css" media="screen" >
</head>
<body>
  <div class="wrapper">
    <%- include('../partials/header.ejs')  %>

    <main>
      <h2>Truck vehicles</h2>
      <div class="vehicle-grid">
        <figure class="vehicle-card" id="openModel">
          <img src="./images/vehicles/model-t-tn.jpg" alt="model">
          <figcaption><a href="#">Model Escalade</a><p>$109,</p></figcaption>
        </figure>
        <figure class="vehicle-card" id="openGm">
          <img src="./images/vehicles/hummer-tn.jpg" alt="GM Hummer">
          <figcaption><a href="#">GM Hummer</a><p>$58,800</p></figcaption>
        </figure>
        <figure class="vehicle-card" id="openDialogBtn">
          <img src="./images/vehicles/fire-truck-tn.jpg" alt="Spartan Fire Truck">
          <figcaption><a href="#">Spartan Fire Truck</a><p>$50,000</p></figcaption>
        </figure>
      </div>

<dialog id="truckDialog">
  <form method="dialog">
    <div class="dialog-header">
      <h3>Spartan Fire Truck</h3>
      <button id="closeDialogBtn" aria-label="Close dialog">&times;</button>
    </div>
    <div class="dialog-content">
      <img src="./images/vehicles/fire-truck-tn.jpg" alt="Spartan Fire Truck">
      <div class="vehicle-details">
        <p><strong>Make:</strong> Spartan</p>
        <p><strong>Model:</strong> Fire Truck</p>
        <p><strong>Price:</strong> $50,000</p>
        <p><strong>Description:</strong> Heavy-duty truck built for emergencies with high-performance features.</p>
      </div>
    </div>
  </form>
</dialog>

<dialog id="gm">
  <form method="dialog">
    <div class="dialog-header">
      <h3>MODEL ESCALADE</h3>
      <button id="closeDialogBtn" aria-label="Close dialog">&times;</button>
    </div>
    <div class="dialog-content">
      <img src="./images/vehicles/hummer-tn.jpg" alt="Spartan Fire Truck">
      <div class="vehicle-details">
        <p><strong>Make:</strong> GM Hammer</p>
        <p><strong>Model:</strong> Hammer</p>
        <p><strong>Price:</strong> $58,800</p>
        <p><strong>Description:</strong> Heavy-duty truck built for emergencies with high-performance features.</p>
      </div>
    </div>
  </form>
</dialog>

<dialog id="model">
  <form method="dialog">
    <div class="dialog-header">
      <h3>MODEL ESCALADE</h3>
      <button id="closeDialogBtn" aria-label="Close dialog">&times;</button>
    </div>
    <div class="dialog-content">
      <img src="./images/vehicles/model-t-tn.jpg" alt="Spartan Fire Truck">
      <div class="vehicle-details">
        <p><strong>Make:</strong> Spartan</p>
        <p><strong>Model:</strong> Fire Truck</p>
        <p><strong>Price:</strong> $50,000</p>
        <p><strong>Description:</strong> Heavy-duty truck built for emergencies with high-performance features.</p>
      </div>
    </div>
  </form>
</dialog>

    </main>

    <%- include('../partials/footer.ejs')  %>
  </div>
  <script>
  const dialog = document.getElementById("truckDialog");
  const openBtn = document.getElementById("openDialogBtn");
  const closeBtn = document.getElementById("closeDialogBtn");
  const gm = document.getElementById("gm");
  const openGm = document.getElementById("openGm");
  const model = document.getElementById("model");
  const openModel = document.getElementById("openModel");
  

  openBtn.addEventListener("click", () => {
    dialog.showModal();
  });

  openModel.addEventListener("click", () => {
    model.showModal();
  });

  openGm.addEventListener("click", () => {
    gm.showModal();
  });

  closeBtn.addEventListener("click", () => {
    dialog.close();
  });
</script>

</body>
</html>
